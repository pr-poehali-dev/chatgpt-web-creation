{
  "tests": [
    {
      "name": "OPTIONS request for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedHeaders": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "name": "POST with valid search query",
      "method": "POST",
      "path": "/",
      "body": {
        "message": "погода в Москве",
        "language": "ru"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "response": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST without message",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "Message is required"
      }
    }
  ]
}